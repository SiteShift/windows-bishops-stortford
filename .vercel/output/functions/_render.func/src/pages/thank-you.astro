---
import Layout from '../layouts/Layout.astro';
import siteData from '../data/siteData.json';

const title = `Thank You | ${siteData.business.name}`;
const description = "Thank you for your enquiry. We'll be in touch shortly to arrange your free window consultation.";
---

<Layout title={title} description={description}>
  <section class="py-20 bg-gray-50 min-h-screen flex items-center">
    <div class="container mx-auto px-6">
      <div class="max-w-2xl mx-auto text-center">
        <!-- Success Icon -->
        <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-8">
          <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>

        <h1 class="text-4xl font-bold text-gray-900 mb-6">Thank You!</h1>
        
        <p class="text-xl text-gray-700 mb-8">
          {siteData.contact.thankYouMessage}
        </p>

        <!-- Installer Contact Details -->
        <div class="bg-white rounded-lg shadow-md p-8 mb-8">
          <h2 class="text-2xl font-semibold text-blue-900 mb-6">Need Immediate Assistance?</h2>
          
          <div class="space-y-4">
            <div class="flex items-center justify-center space-x-3">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <span class="text-lg">
                <a href="tel:{siteData.business.telephone}" class="text-blue-600 hover:text-blue-800 font-semibold">
                  {siteData.business.telephone}
                </a>
              </span>
            </div>
            
            <div class="flex items-center justify-center space-x-3">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <span class="text-lg">
                <a href="mailto:{siteData.business.email}" class="text-blue-600 hover:text-blue-800 font-semibold">
                  {siteData.business.email}
                </a>
              </span>
            </div>
          </div>

          <p class="text-gray-600 mt-6">
            {siteData.contact.installerContact}
          </p>
        </div>

        <!-- What Happens Next -->
        <div class="bg-blue-50 rounded-lg p-8 mb-8">
          <h2 class="text-2xl font-semibold text-blue-900 mb-6">What Happens Next?</h2>
          
          <div class="grid md:grid-cols-3 gap-6 text-left">
            <div class="flex flex-col items-center text-center">
              <div class="w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold text-lg mb-3">
                1
              </div>
              <h3 class="font-semibold mb-2">We'll Call You</h3>
              <p class="text-sm text-gray-600">Within 2 hours during business hours to discuss your requirements</p>
            </div>
            
            <div class="flex flex-col items-center text-center">
              <div class="w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold text-lg mb-3">
                2
              </div>
              <h3 class="font-semibold mb-2">Free Survey</h3>
              <p class="text-sm text-gray-600">We'll arrange a convenient time for a free home consultation</p>
            </div>
            
            <div class="flex flex-col items-center text-center">
              <div class="w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold text-lg mb-3">
                3
              </div>
              <h3 class="font-semibold mb-2">Free Quote</h3>
              <p class="text-sm text-gray-600">Detailed written quote with no hidden costs or obligations</p>
            </div>
          </div>
        </div>

        <!-- Navigation Links -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/" 
            class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition-colors duration-200"
          >
            Return to Homepage
          </a>
          <a 
            href="/#services" 
            class="border border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white font-bold py-3 px-6 rounded-lg transition-colors duration-200"
          >
            Learn About Our Services
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout> 