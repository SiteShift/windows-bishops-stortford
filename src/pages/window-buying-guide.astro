  "step": [
    {
      "@type": "HowToStep",
      "name": "Choose Window Type",
      "text": "Select from casement, sash, tilt and turn, or bay windows based on your home's style and needs"
    },
    {
      "@type": "HowToStep", 
      "name": "Select Frame Material",
      "text": "Compare uPVC, aluminium, timber, and composite materials for durability and energy efficiency"
    },
    {
      "@type": "HowToStep",
      "name": "Choose Glazing",
      "text": "Decide between double or triple glazing with Low-E coatings and gas fills"
    },
    {
      "@type": "HowToStep",
