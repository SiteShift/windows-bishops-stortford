---
import Layout from '../layouts/Layout.astro';
import siteData from '../data/siteData.json';

// Schema markup for the buying guide
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "Complete Window Buying Guide 2025 | UK Homeowners",
  "description": "Comprehensive guide to buying windows in 2025. Compare types, materials, glazing, prices, and energy ratings. Expert advice from 38-year industry veteran Oliver Greene.",
