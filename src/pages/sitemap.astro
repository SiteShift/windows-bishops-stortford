---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

// Get all blog posts for the sitemap
const blogPosts = await getCollection('blog');
---

<Layout 
  title="Sitemap | Windows Bishop's Stortford"
  description="Complete sitemap for Windows Bishop's Stortford. Find all our pages including window services, blog posts, and helpful resources."
>
  <Header />
  
  <!-- Hero Section -->
  <section class="hero-gradient text-white relative overflow-hidden">
    <div class="hero-overlay absolute inset-0"></div>
    <div class="relative container-custom section-padding">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Breadcrumb -->
        <nav class="flex justify-center mb-8" aria-label="Breadcrumb">
          <ol class="flex items-center space-x-2 text-green-200">
            <li><a href="/" class="hover:text-white transition-colors">Home</a></li>
            <li class="text-green-300">&gt;</li>
            <li class="text-white">Sitemap</li>
          </ol>
        </nav>
        
        <h1 class="text-5xl lg:text-6xl font-extrabold mb-6 tracking-tight">
          Sitemap
        </h1>
        <p class="text-xl lg:text-2xl mb-8 text-gray-100 leading-relaxed">
          Complete guide to all pages on our website
        </p>
      </div>
    </div>
  </section>

  <!-- Sitemap Content -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        
        <!-- Main Pages -->
        <div class="mb-12">
          <h2 class="text-3xl font-bold text-green-800 mb-6">Main Pages</h2>
          <div class="grid md:grid-cols-2 gap-4">
            <div class="bg-gray-50 p-4 rounded-lg">
              <h3 class="text-xl font-semibold text-green-700 mb-3">Core Pages</h3>
              <ul class="space-y-2">
                <li><a href="/" class="text-blue-600 hover:text-blue-800 transition-colors">Home</a></li>
                <li><a href="/contact" class="text-blue-600 hover:text-blue-800 transition-colors">Contact Us</a></li>
                <li><a href="/blog" class="text-blue-600 hover:text-blue-800 transition-colors">Blog</a></li>
                <li><a href="/thank-you" class="text-blue-600 hover:text-blue-800 transition-colors">Thank You</a></li>
              </ul>
            </div>
            <div class="bg-gray-50 p-4 rounded-lg">
              <h3 class="text-xl font-semibold text-green-700 mb-3">Legal Pages</h3>
              <ul class="space-y-2">
                <li><a href="/privacy" class="text-blue-600 hover:text-blue-800 transition-colors">Privacy Policy</a></li>
                <li><a href="/terms" class="text-blue-600 hover:text-blue-800 transition-colors">Terms of Service</a></li>
                <li><a href="/sitemap" class="text-blue-600 hover:text-blue-800 transition-colors">Sitemap</a></li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Service Hub Pages -->
        <div class="mb-12">
          <h2 class="text-3xl font-bold text-green-800 mb-6">Window Services</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
            <div class="bg-green-50 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-green-700 mb-3">Installation</h3>
              <a href="/window-installation-bishops-stortford" class="text-blue-600 hover:text-blue-800 transition-colors">
                Window Installation Bishop's Stortford
              </a>
            </div>
            <div class="bg-green-50 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-green-700 mb-3">Types & Materials</h3>
              <a href="/window-types" class="text-blue-600 hover:text-blue-800 transition-colors">
                Window Types & Materials Guide
              </a>
            </div>
            <div class="bg-green-50 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-green-700 mb-3">Energy Efficiency</h3>
              <a href="/energy-efficient-windows" class="text-blue-600 hover:text-blue-800 transition-colors">
                Energy Efficient Windows
              </a>
            </div>
            <div class="bg-green-50 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-green-700 mb-3">Repairs</h3>
              <a href="/window-repair-bishops-stortford" class="text-blue-600 hover:text-blue-800 transition-colors">
                Window Repair Bishop's Stortford
              </a>
            </div>
            <div class="bg-green-50 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-green-700 mb-3">Costs & Finance</h3>
              <a href="/window-costs-finance" class="text-blue-600 hover:text-blue-800 transition-colors">
                Window Costs & Finance Options
              </a>
            </div>
          </div>
        </div>

        <!-- Window Type Landing Pages -->
        <div class="mb-12">
          <h2 class="text-3xl font-bold text-green-800 mb-6">Window Types & Materials</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
            <div class="bg-blue-50 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-blue-700 mb-3">uPVC Windows</h3>
              <a href="/upvc-windows-bishops-stortford" class="text-blue-600 hover:text-blue-800 transition-colors">
                uPVC Windows Bishop's Stortford
              </a>
            </div>
            <div class="bg-blue-50 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-blue-700 mb-3">Aluminium Windows</h3>
              <a href="/aluminium-windows-bishops-stortford" class="text-blue-600 hover:text-blue-800 transition-colors">
                Aluminium Windows Bishop's Stortford
              </a>
            </div>
            <div class="bg-blue-50 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-blue-700 mb-3">Timber Windows</h3>
              <a href="/timber-windows-bishops-stortford" class="text-blue-600 hover:text-blue-800 transition-colors">
                Timber Windows Bishop's Stortford
              </a>
            </div>
            <div class="bg-blue-50 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-blue-700 mb-3">Casement Windows</h3>
              <a href="/casement-windows-bishops-stortford" class="text-blue-600 hover:text-blue-800 transition-colors">
                Casement Windows Bishop's Stortford
              </a>
            </div>
            <div class="bg-blue-50 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-blue-700 mb-3">Sash Windows</h3>
              <a href="/sash-windows-bishops-stortford" class="text-blue-600 hover:text-blue-800 transition-colors">
                Sliding Sash Windows Bishop's Stortford
              </a>
            </div>
          </div>
        </div>

        <!-- Comparison Pages -->
        <div class="mb-12">
          <h2 class="text-3xl font-bold text-green-800 mb-6">Window Comparison Guides</h2>
          <div class="bg-amber-50 p-6 rounded-lg mb-6">
            <p class="text-gray-700 mb-4">Compare different window options to make the best choice for your Bishop's Stortford property:</p>
          </div>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
            <!-- Glazing Performance -->
            <div class="bg-green-50 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-green-700 mb-3">Glazing Performance</h3>
              <ul class="space-y-2">
                <li><a href="/compare/triple-vs-double-glazing-bishops-stortford" class="text-blue-600 hover:text-blue-800 transition-colors text-sm">Triple vs Double Glazing</a></li>
                <li><a href="/compare/single-vs-double-glazing-bishops-stortford" class="text-blue-600 hover:text-blue-800 transition-colors text-sm">Single vs Double Glazing</a></li>
                <li><a href="/compare/double-vs-secondary-glazing-bishops-stortford" class="text-blue-600 hover:text-blue-800 transition-colors text-sm">Double vs Secondary Glazing</a></li>
                <li><a href="/compare/secondary-glazing-vs-triple-glazing-bishops-stortford" class="text-blue-600 hover:text-blue-800 transition-colors text-sm">Secondary vs Triple Glazing</a></li>
              </ul>
            </div>

            <!-- Window Materials -->
            <div class="bg-blue-50 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-blue-700 mb-3">Window Materials</h3>
              <ul class="space-y-2">
                <li><a href="/compare/upvc-vs-aluminium-windows-bishops-stortford" class="text-blue-600 hover:text-blue-800 transition-colors text-sm">uPVC vs Aluminium Windows</a></li>
                <li><a href="/compare/upvc-vs-timber-windows-bishops-stortford" class="text-blue-600 hover:text-blue-800 transition-colors text-sm">uPVC vs Timber Windows</a></li>
                <li><a href="/compare/aluminium-vs-timber-windows-bishops-stortford" class="text-blue-600 hover:text-blue-800 transition-colors text-sm">Aluminium vs Timber Windows</a></li>
              </ul>
            </div>

            <!-- Window Styles -->
            <div class="bg-purple-50 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-purple-700 mb-3">Window Styles</h3>
              <ul class="space-y-2">
                <li><a href="/compare/sash-vs-casement-windows-bishops-stortford" class="text-blue-600 hover:text-blue-800 transition-colors text-sm">Sash vs Casement Windows</a></li>
                <li><a href="/compare/tilt-and-turn-vs-casement-bishops-stortford" class="text-blue-600 hover:text-blue-800 transition-colors text-sm">Tilt & Turn vs Casement</a></li>
                <li><a href="/compare/flush-casement-vs-stormproof-bishops-stortford" class="text-blue-600 hover:text-blue-800 transition-colors text-sm">Flush vs Stormproof Casement</a></li>
              </ul>
            </div>

            <!-- Technical Features -->
            <div class="bg-orange-50 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-orange-700 mb-3">Gas & Glazing Tech</h3>
              <ul class="space-y-2">
                <li><a href="/compare/argon-vs-krypton-gas-glazing" class="text-blue-600 hover:text-blue-800 transition-colors text-sm">Argon vs Krypton Gas</a></li>
                <li><a href="/compare/warm-edge-spacer-vs-aluminium" class="text-blue-600 hover:text-blue-800 transition-colors text-sm">Warm Edge vs Aluminium Spacer</a></li>
                <li><a href="/compare/low-e-glass-vs-standard" class="text-blue-600 hover:text-blue-800 transition-colors text-sm">Low-E Glass vs Standard</a></li>
              </ul>
            </div>

            <!-- Safety & Acoustic -->
            <div class="bg-red-50 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-red-700 mb-3">Safety & Acoustic</h3>
              <ul class="space-y-2">
                <li><a href="/compare/laminated-vs-toughened-safety-glass" class="text-blue-600 hover:text-blue-800 transition-colors text-sm">Laminated vs Toughened Glass</a></li>
                <li><a href="/compare/acoustic-glazing-vs-standard" class="text-blue-600 hover:text-blue-800 transition-colors text-sm">Acoustic vs Standard Glazing</a></li>
              </ul>
            </div>

            <!-- Hub Page -->
            <div class="bg-gray-100 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-gray-700 mb-3">All Comparisons</h3>
              <a href="/compare" class="text-blue-600 hover:text-blue-800 transition-colors text-sm font-medium">
                View All Window Comparisons →
              </a>
              <p class="text-xs text-gray-600 mt-2">Browse all 14 detailed comparison guides</p>
            </div>
          </div>
        </div>

        <!-- Blog Posts -->
        <div class="mb-12">
          <h2 class="text-3xl font-bold text-green-800 mb-6">Blog Posts</h2>
          <div class="bg-gray-50 p-6 rounded-lg">
            <p class="text-gray-600 mb-4">Expert guides and advice from 38 years of window industry experience:</p>
            
            <!-- Blog Navigation -->
            <div class="mb-6 p-4 bg-white rounded-lg border">
              <h3 class="text-lg font-semibold text-green-700 mb-3">Browse Blog Pages</h3>
              <div class="flex flex-wrap gap-2">
                <a href="/blog" class="px-3 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors text-sm">
                  Page 1 (Latest)
                </a>
                <a href="/blog/2" class="px-3 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors text-sm">
                  Page 2
                </a>
                <a href="/blog/3" class="px-3 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors text-sm">
                  Page 3
                </a>
                <a href="/blog/4" class="px-3 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors text-sm">
                  Page 4
                </a>
                <a href="/blog/5" class="px-3 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors text-sm">
                  Page 5
                </a>
              </div>
              <p class="text-sm text-gray-600 mt-2">{blogPosts.length} total articles across 5 pages</p>
            </div>

            <div class="grid md:grid-cols-2 gap-3">
              {blogPosts.map((post) => (
                <div class="py-2">
                  <a 
                    href={`/blog/${post.slug}`} 
                    class="text-blue-600 hover:text-blue-800 transition-colors block"
                  >
                    {post.data.title}
                  </a>
                  <p class="text-sm text-gray-500 mt-1">
                    {new Date(post.data.publishDate).toLocaleDateString('en-GB', { 
                      year: 'numeric', 
                      month: 'long', 
                      day: 'numeric' 
                    })}
                  </p>
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Quick Navigation -->
        <div class="bg-green-800 text-white p-8 rounded-xl">
          <h2 class="text-2xl font-bold mb-4">Quick Navigation</h2>
          <div class="grid md:grid-cols-3 gap-6">
            <div>
              <h3 class="text-lg font-semibold mb-3">Get Started</h3>
              <ul class="space-y-2 text-green-100">
                <li><a href="/contact" class="hover:text-white transition-colors">Get Free Quote</a></li>
                <li><a href="/#businesses" class="hover:text-white transition-colors">Find Local Installers</a></li>
                <li><a href="/window-types" class="hover:text-white transition-colors">Choose Window Type</a></li>
              </ul>
            </div>
            <div>
              <h3 class="text-lg font-semibold mb-3">Learn More</h3>
              <ul class="space-y-2 text-green-100">
                <li><a href="/energy-efficient-windows" class="hover:text-white transition-colors">Energy Savings</a></li>
                <li><a href="/window-costs-finance" class="hover:text-white transition-colors">Pricing & Finance</a></li>
                <li><a href="/faqs" class="hover:text-white transition-colors">FAQs</a></li>
                <li><a href="/blog" class="hover:text-white transition-colors">Expert Guides</a></li>
              </ul>
            </div>
            <div>
              <h3 class="text-lg font-semibold mb-3">Need Help?</h3>
              <ul class="space-y-2 text-green-100">
                <li><a href="/window-repair-bishops-stortford" class="hover:text-white transition-colors">Window Repairs</a></li>
                <li><a href="/contact" class="hover:text-white transition-colors">Contact Support</a></li>
                <li><a href="/privacy" class="hover:text-white transition-colors">Privacy Policy</a></li>
              </ul>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <Footer />
</Layout> 