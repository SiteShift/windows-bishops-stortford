<script>
  // Add smooth scrolling for anchor links
  document.addEventListener('DOMContentLoaded', function() {
    const anchorLinks = document.querySelectorAll('a[href^="#"]');
    
    anchorLinks.forEach(link => {
      link.addEventListener('click', function(e: Event) {
        e.preventDefault();
        const href = (e.target as HTMLAnchorElement).getAttribute('href');
        if (href) {
          const target = document.querySelector(href);
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        }
      });
    });

    // Add search functionality
    const searchInput = document.createElement('input');
    searchInput.type = 'text';
    searchInput.placeholder = 'Search FAQs...';
    searchInput.className = 'w-full max-w-md mx-auto mb-8 px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-transparent';
    
    const navigationSection = document.querySelector('.section-padding.bg-gray-50 .container-custom');
    const navigationGrid = navigationSection?.querySelector('.grid');
    
    if (navigationSection && navigationGrid) {
      navigationSection.insertBefore(searchInput, navigationGrid);
    }

    // Search functionality
    searchInput.addEventListener('input', function(e: Event) {
      const searchTerm = (e.target as HTMLInputElement).value.toLowerCase();
      const faqSections = document.querySelectorAll('[id^="general"], [id^="pricing"], [id^="installation"], [id^="materials"], [id^="performance"], [id^="maintenance"], [id^="security"], [id^="compliance"], [id^="local"], [id^="concerns"]');
      
      faqSections.forEach(section => {
        const questions = section.querySelectorAll('details');
        let hasVisibleQuestions = false;
        
        questions.forEach(question => {
          const questionElement = question.querySelector('h3');
          const answerElement = question.querySelector('p');
          
          if (questionElement && answerElement) {
            const questionText = questionElement.textContent?.toLowerCase() || '';
            const answerText = answerElement.textContent?.toLowerCase() || '';
            
            if (questionText.includes(searchTerm) || answerText.includes(searchTerm) || searchTerm === '') {
              (question as HTMLElement).style.display = 'block';
              hasVisibleQuestions = true;
            } else {
              (question as HTMLElement).style.display = 'none';
            }
          }
        });
        
        // Show/hide entire sections based on visible questions
        if (hasVisibleQuestions || searchTerm === '') {
          (section as HTMLElement).style.display = 'block';
        } else {
          (section as HTMLElement).style.display = 'none';
        }
      });
    });
  });
</script>