---
import Layout from '../layouts/Layout.astro';
import siteData from '../data/siteData.json';

// Schema markup for About Us page - Person and Organization
const oliverGreeneSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Oliver Greene",
  "jobTitle": "Window Installation Expert & Industry Consultant",
  "description": "38-year veteran of the UK window industry, FENSA certified specialist, and building regulations advisor helping homeowners in Bishop's Stortford and Hertfordshire.",
  "url": `https://${siteData.site.domain}/about-us`,
  "image": `https://${siteData.site.domain}/images/oliver-greene-profilepic_compressed_compressed.webp`,
  "sameAs": [
    `https://${siteData.site.domain}`
  ],
  "knowsAbout": [
    "Window Installation",
    "Building Regulations",
    "FENSA Compliance",
    "Energy Efficient Windows",
    "Heritage Window Restoration",
    "uPVC Windows",
    "Aluminium Windows",
    "Timber Windows"
  ],
  "hasCredential": [
    {
      "@type": "EducationalOccupationalCredential",
      "name": "FENSA Knowledge Specialist",
      "credentialCategory": "Professional Certification"
    },
    {
      "@type": "EducationalOccupationalCredential", 
      "name": "Building Regulations Advisor",
      "credentialCategory": "Professional Qualification"
    }
  ],
  "worksFor": {
    "@type": "LocalBusiness",
    "name": siteData.business.name,
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Bishop's Stortford",
      "addressRegion": "Hertfordshire",
      "addressCountry": "GB"
    }
  },
  "alumniOf": {
    "@type": "Organization",
    "name": "UK Window Installation Industry",
    "description": "38 years of hands-on experience from apprentice to expert consultant"
  }
};

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": siteData.business.name,
  "description": "Expert window installation advice and trusted local installer connections in Bishop's Stortford and Hertfordshire. Led by 38-year industry veteran Oliver Greene.",
  "url": `https://${siteData.site.domain}`,
  "founder": {
    "@type": "Person",
    "name": "Oliver Greene"
  },
  "foundingDate": "2024",
  "areaServed": [
    {
      "@type": "City",
      "name": "Bishop's Stortford",
      "containedInPlace": {
        "@type": "AdministrativeArea",
        "name": "Hertfordshire"
      }
    }
  ],
  "serviceType": "Window Installation Consultation",
  "hasCredential": [
    "FENSA Knowledge",
    "Building Regulations Compliance",
    "Part L Energy Efficiency",
    "Conservation Area Expertise"
  ]
};

// Breadcrumb schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": `https://${siteData.site.domain}`
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "About Us",
      "item": `https://${siteData.site.domain}/about-us`
    }
  ]
};

const schema = [oliverGreeneSchema, organizationSchema, breadcrumbSchema];
---

<Layout 
  title="About Us | Oliver Greene - 38 Years Window Industry Experience"
  description="Learn about Oliver Greene and the mission behind Windows Bishop's Stortford. Trusted advice, expert insight, and certified local installers across Hertfordshire."
  canonicalUrl={`https://${siteData.site.domain}/about-us`}
  ogImage={`https://${siteData.site.domain}/images/oliver-greene-profilepic_compressed_compressed.webp`}
  schema={schema}
>
  <!-- Hero Section -->
  <section class="relative hero-gradient text-white overflow-hidden">
    <div class="hero-overlay absolute inset-0"></div>
    <div class="relative container-custom section-padding">
      <!-- Breadcrumbs -->
      <nav aria-label="Breadcrumb" class="mb-8">
        <ol class="flex items-center space-x-2 text-sm text-green-200">
          <li>
            <a href="/" class="hover:text-white transition-colors">Home</a>
          </li>
          <li class="text-green-300">/</li>
          <li class="text-white font-medium">About Us</li>
        </ol>
      </nav>

      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Content -->
        <div class="max-w-2xl">
          <div class="flex items-center mb-6">
            <div class="bg-green-100 p-3 rounded-full mr-4">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
