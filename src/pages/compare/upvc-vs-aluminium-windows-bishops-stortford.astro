<script>
  // FAQ Toggle Function
  function toggleFaq(index: number) {
    const answer = document.getElementById(`answer-${index}`);
    const icon = document.getElementById(`icon-${index}`);
    
    if (answer && icon) {
      if (answer.classList.contains('hidden')) {
        answer.classList.remove('hidden');
        icon.style.transform = 'rotate(180deg)';
      } else {
        answer.classList.add('hidden');
        icon.style.transform = 'rotate(0deg)';
      }
    }
  }

  // Cost Calculator
  function updateCalculator() {
    const windowCountEl = document.getElementById('window-count') as HTMLInputElement;
    const windowSizeEl = document.getElementById('window-size') as HTMLSelectElement;
    const qualityLevelEl = document.getElementById('quality-level') as HTMLSelectElement;
    
    if (!windowCountEl || !windowSizeEl || !qualityLevelEl) return;
    
    const windowCount = parseInt(windowCountEl.value) || 12;
    const windowSize = windowSizeEl.value as 'small' | 'medium' | 'large';
    const qualityLevel = qualityLevelEl.value as 'standard' | 'premium' | 'luxury';
    
    // Base costs per window by size and quality
    const costs = {
      small: { 
        standard: { upvc: 300, aluminium: 450 },
        premium: { upvc: 400, aluminium: 600 },
        luxury: { upvc: 500, aluminium: 750 }
      },
      medium: { 
        standard: { upvc: 400, aluminium: 600 },
        premium: { upvc: 500, aluminium: 750 },
        luxury: { upvc: 650, aluminium: 950 }
      },
      large: { 
        standard: { upvc: 550, aluminium: 800 },
        premium: { upvc: 700, aluminium: 1000 },
        luxury: { upvc: 850, aluminium: 1250 }
      }
    };
    
    const upvcPerWindow = costs[windowSize][qualityLevel].upvc;
    const aluminiumPerWindow = costs[windowSize][qualityLevel].aluminium;
    
    const upvcTotal = upvcPerWindow * windowCount;
    const aluminiumTotal = aluminiumPerWindow * windowCount;
    const difference = aluminiumTotal - upvcTotal;
    const percentDiff = Math.round((difference / upvcTotal) * 100);
    
    // Update display
    const elements = [
      { id: 'upvc-cost', value: `£${upvcTotal.toLocaleString()}` },
      { id: 'upvc-per-window', value: `£${upvcPerWindow}` },
      { id: 'aluminium-cost', value: `£${aluminiumTotal.toLocaleString()}` },
      { id: 'aluminium-per-window', value: `£${aluminiumPerWindow}` },
      { id: 'cost-difference', value: `£${difference.toLocaleString()} (${percentDiff}% more)` }
    ];
    
    elements.forEach(({ id, value }) => {
      const el = document.getElementById(id);
      if (el) el.textContent = value;
    });
  }

  // Initialize calculator
  document.addEventListener('DOMContentLoaded', function() {
    updateCalculator();
    
    // Add event listeners
    const inputs = ['window-count', 'window-size', 'quality-level'];
    inputs.forEach(id => {
      const el = document.getElementById(id);
      if (el) {
        el.addEventListener('input', updateCalculator);
        el.addEventListener('change', updateCalculator);
      }
    });
  });
</script>