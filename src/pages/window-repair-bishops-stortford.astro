    document.addEventListener('DOMContentLoaded', function() {
      const faqButtons = document.querySelectorAll('.faq-button');
      
      faqButtons.forEach(function(button) {
        button.addEventListener('click', function(event) {
          const target = event.currentTarget as HTMLElement;
          if (!target) return;
          
          const faqItem = target.closest('.faq-item');
          if (!faqItem) return;
          
          const content = faqItem.querySelector('.faq-content') as HTMLElement;
          const icon = target.querySelector('.faq-icon') as HTMLElement;
          const isExpanded = target.getAttribute('aria-expanded') === 'true';
          
          // Close all other FAQ items
          faqButtons.forEach(function(otherButton) {
            if (otherButton !== target) {
              const otherItem = otherButton.closest('.faq-item');
              if (otherItem) {
                const otherContent = otherItem.querySelector('.faq-content') as HTMLElement;
                const otherIcon = otherButton.querySelector('.faq-icon') as HTMLElement;
                
                otherButton.setAttribute('aria-expanded', 'false');
                if (otherContent) otherContent.classList.add('hidden');
                if (otherIcon) otherIcon.style.transform = 'rotate(0deg)';
              }
            }
          });
          
          // Toggle current FAQ item
          if (isExpanded) {
            target.setAttribute('aria-expanded', 'false');
            if (content) content.classList.add('hidden');
            if (icon) icon.style.transform = 'rotate(0deg)';
          } else {
            target.setAttribute('aria-expanded', 'true');
            if (content) content.classList.remove('hidden');
            if (icon) icon.style.transform = 'rotate(180deg)';
          }
        });
      });
    });
